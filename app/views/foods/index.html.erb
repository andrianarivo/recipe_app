<p style="color: green"><%= notice %></p>

<h1 class="mx-3">Foods</h1>

<div id="foods">
  <% @foods.each do |food| %>
  <div id="<%= dom_id food %>" class="card m-3">
    <div class="card-body d-flex gap-5 justify-content-center">
      <div class="row mx-3">
        <div class="col-4 d-flex flex-row align-items-center">
          <a href="<%= food_path food.id %>" class="text-decoration-none mx-5">
            <h3><%= food.name %></h3>
          </a>
          <%= link_to "REMOVE", food_path(food.id), data: { turbo_method: :delete }, class: "btn btn-danger mx-5" %>
        </div>
        
      </div>
    </div>
  </div>
  
  <% end %>
</div>

<%= link_to "New food", new_food_path %>
